<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="../../favicon.ico">

    <title>Debra - Git Branch Management</title>

    <!-- jQuery & Plugins -->
    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>

    <script src="{{ app.request.basepath }}/libs/tablesorter/jquery.tablesorter.min.js"></script>
    <script src="{{ app.request.basepath }}/libs/tablesorter/jquery.tablesorter.widgets.js"></script>
    <link rel="stylesheet" href="{{ app.request.basepath }}/libs/tablesorter/themes/blue/style.css">

    <script src="{{ app.request.basepath }}/libs/loadingspinner/loading.spinner.js"></script>
    <link rel="stylesheet" href="{{ app.request.basepath }}/libs/loadingspinner/loading.spinner.css">

    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">

    <!-- Latest compiled and minified JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="{{ app.request.basepath }}/css/style.css">

    <script src="{{ app.request.basepath }}/js/issue.table.js"></script>
    <script src="{{ app.request.basepath }}/js/ajax.loading.js"></script>

</head>

    <body>

        <!-- Fixed navbar -->
        <div class="navbar navbar-default navbar-fixed-top" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="{{ app.url_generator.generate('overview') }}">Debra - Git Branch Management</a>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav navbar-right">

                        {% if logged_in == true %}
                            <li>
                                <a>
                                    Last cache update:
                                    {% if cache_timeouted == true %}
                                        <span class="label label-danger">{{ cache_last_updated }}</span>
                                    {% else %}
                                        <span class="label label-success">{{ cache_last_updated }}</span>
                                    {% endif %}
                                </a>
                            </li>
                            <li>
                                <a>
                                    <button class="btn btn-sm btn-primary" id="empty-session-cache"
                                       data-request-url="{{ app.url_generator.generate('empty-session-cache') }}"
                                       data-redirect-url="{{ app.url_generator.generate('overview') }}"
                                            >Truncate Session Cache</button>
                                </a>
                            </li>
                        {% endif %}
                        <li><a href="{{ app.url_generator.generate('logout') }}">logout</a></li>
                    </ul>
                </div><!--/.nav-collapse -->
            </div>
        </div>


        <div class="container">

            <h1>
                {{ block('topic') }}
            </h1>

            {{ block('content') }}

        </div> <!-- /container -->
    </body>
</html>